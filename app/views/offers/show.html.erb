
<div class="d-flex">
  <div class="p-3 m-3 shadow p-3 mb-5 bg-white rounded" >
    <h2><%= @offer.title.capitalize %></h2>
    <p><%= @offer.description.capitalize %></p>
    <p><%= @offer.category.capitalize %></p>
    <p><%= @offer.qualifications.capitalize %></p>
    <p><%= @offer.price %></p>
     <% if @offer.reviews  %>
     <% @offer.reviews.each do |review| %>
      <p> review: <%= review.content %></p>
    <% end %>
      <% end %>
    <div class="p-1 m-1">
      <% if current_user.teacher? %>
        <%= link_to "Delete this offer",
        offer_path(@offer),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <% end %>
    </div>
    <div class="p-1 m-1">
      <% if current_user.teacher? %>
        <%=  link_to "Edit this offer", edit_offer_path(@offer) %>
      <% end %>
    </div>
  </div>
  <div class="p-3 m-3 shadow p-3 mb-5 bg-white rounded" >
    <h3>Book this offer</h3>
    <%= simple_form_for [@offer, Booking.new] do |f| %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.submit %>
    <% end %>

  </div>
  <div class="p-3 m-3 shadow p-3 mb-5 bg-white rounded">
  <%= render "reviews/review_form", offer: @offer, review: @review %>

<%= link_to "Back to all offers", offers_path %>
  </div>
</div>
