

<div class="p-1 m-1">
  <div class="p-3 m-3">
    <h1 class="display-12 text-center">My Offers</h1>
    <div class="container d-flex align-items-center justify-content-center pt-1">

      <%= link_to "New Offer", new_offer_path, class: "back-button" %>

    </div>
  </div>

  <div class="container d-flex align-items-center justify-content-between my-3">
    <div class="p-1 m-1 d-flex flex-wrap">
      <% @offers.each do |offer| %>
        <% if offer.user_id == current_user.id  %>
          <div class="p-1 m-1 w-100 shadow p-3 mb-5 bg-white rounded teacher-offer-card">
            <h3><%=  link_to offer.title.capitalize, offer_path(offer.id), class: "text-decoration-none"  %></h3>
            <p><%= offer.description.capitalize %></p>
            <p><%= offer.category.capitalize %></p>
            <p><%= offer.qualifications.capitalize %></p>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
